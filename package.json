{
  "name": "slides",
  "version": "1.0.0",
  "description": "My talks",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "ls src/*.mdx | xargs -I'{}' basename {} .mdx | xargs -I'{}' -n1 $(npm bin)/mdx-deck build {}.mdx --no-html --out-dir ./dist/{}",
    "postbuild": "cp -R ./src/assets ./dist/assets",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "mdx-deck"
  },
